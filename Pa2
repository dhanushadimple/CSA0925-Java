import java.util.*;
class Pa2
{
public static void main(String args[])
{
int i,j,n;
Scanner sc=new Scanner(System.in);
System.out.println("enter a number");
n=sc.nextInt();
for(i=1;i<=n;i++)
{
for(j=1;j<=i;j++)
{
System.out.print(i+" ");
}
System.out.println();
}
 for(i=n-1;i>=1;i--)
{
for(j=1;j<=n-i;j++)
{
System.out.print(i+" ");
}
System.out.println();
}
}
}
